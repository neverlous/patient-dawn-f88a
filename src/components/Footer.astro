<style>
  .site-footer {
    padding: 2.5em 1em; /* Increased padding */
    background-color: var(--code-bg); /* Darker background for footer */
    border-top: 1px solid var(--border-color);
    color: var(--text-secondary);
    text-align: center;
    font-size: 0.875em; /* Slightly smaller base font for footer */
    line-height: 1.6;
  }

  .site-footer .container {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75em; /* Space between footer elements */
  }

  .site-footer p {
    margin: 0;
  }

  .footer-links {
    display: flex;
    gap: 1.5em; /* Space between footer page links */
    margin: 0.25em 0;
  }

  .footer-links a,
  .social-links-footer a,
  .tech-credits a {
    color: var(--text-secondary); /* Consistent link color */
    text-decoration: none;
    transition: color 0.2s ease, text-shadow 0.2s ease;
  }

  .footer-links a:hover,
  .footer-links a:focus,
  .social-links-footer a:hover,
  .social-links-footer a:focus,
  .tech-credits a:hover,
  .tech-credits a:focus {
    color: var(--link-hover);
    text-shadow: 0 0 4px rgba(var(--accent-primary-rgb), 0.4);
  }

  .social-links-footer {
    display: flex;
    gap: 1em; /* Space between social icons */
    margin: 0.25em 0;
  }

  .social-links-footer a svg {
    fill: currentColor; /* Ensures SVG picks up the link color */
    transition: transform 0.2s ease;
  }
  .social-links-footer a:hover svg,
  .social-links-footer a:focus svg {
      transform: scale(1.1); /* Slight scale effect on icon hover */
  }

  .tech-credits {
    font-size: 0.9em; /* Slightly smaller for this line */
  }

  .tech-credits .text-glow {
    color: var(--accent-secondary); /* Use secondary accent for this glow */
    font-weight: 500;
  }
</style>
